{
  "root": true,
  "extends": [
    "@swivel-finance"
  ],
  "ignorePatterns": [
    "build",
    "*.js",
    // TODO: remove this once eslint is fixed...
    "*.ts"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.eslint.json"
    ]
  },
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "\\.js$"
        ]
      }
    ]
  }
}
